{
  "name": "@saas-starter/db",
  "version": "1.0.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:migrate": "migrate-mongo up",
    "db:migrate:down": "migrate-mongo down",
    "db:migrate:create": "migrate-mongo create",
    "db:migrate:status": "migrate-mongo status",
    "db:reset": "docker exec saas-starter-mongodb mongosh --username admin --password password --eval 'db.getSiblingDB(\"'${DB_NAME:-saas-starter-kit}'\").dropDatabase()' && migrate-mongo up"
  },
  "dependencies": {
    "mongodb": "^6.17.0",
    "migrate-mongo": "^12.1.3"
  },
  "devDependencies": {
    "@types/mongodb": "^4.0.7",
    "typescript": "^5.4.5"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  }
}
